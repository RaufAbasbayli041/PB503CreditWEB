@model IEnumerable<CredidSystem.Models.BranchViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<h1 style="padding-top:20px; display:flex; justify-content:center; align-items: center">Branch</h1>



<div class="col-md-12">
    <div class="card">
        <div class="card-header" style="display:flex; justify-content:end">
            <div class="d-flex align-items-center">
                <a asp-area="Admin" asp-controller="Branch" asp-action="Create" class="btn btn-primary btn-round ms-auto">
                    <i class="fa fa-plus"></i> Create New
                </a>

            </div>
        </div>
        <div class="card-body">
           
       
            <div class="table-responsive">
                <table id="add-row"
                       class="display table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Address</th>
                            <th>PhoneNumber</th>
                            <th>Merchant</th>

                            <th style="width: 20%">Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Merchant.Name)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">Update</a>
                                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-outline-info">Info</a>
                                    <form asp-action="Delete" method="post" style="display:inline;">
                                        <input type="hidden" name="Id" value="@item.Id" />
                                        <button type="submit" class="btn btn-outline-danger"
                                                onclick="return confirm('Are you sure you want to delete this item?');">
                                            Delete
                                        </button>
                                    </form>

                                </td>

                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>





