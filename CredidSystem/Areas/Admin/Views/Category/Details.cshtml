@model CredidSystem.Models.CategoryViewModel


<div class="container mt-4">
    <h4 class="text-center">Category Detail</h4>
    <hr />

    <table class="table table-borderless w-auto mx-auto">
        <tbody>
            <tr>
                <th>Id</th>
                <td>@Model.Id</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>@Model.Description</td>
            </tr>
            <tr>
                <th>Created At</th>
                <td>@Model.CreatedAt</td>
            </tr>
            <tr>
                <th>Updated At</th>
                <td>@Model.UpdatedAt</td>
            </tr>
        </tbody>
    </table>

    <div class="text-center mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning me-2">Update</a>
        <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
    </div>
</div>